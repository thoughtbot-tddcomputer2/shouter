<div class="form">
	<%= form_for @shout do |form| %>
		<p>
			<%= form.text_field :body, :size => 70 %>
		</p>
		<p>
			<%= submit_tag "Shout!" %>
		</p>
	<% end %>
</div>

<ul>
	<% @shouts.each do |shout| %>
		<li>
			<%= gravatar(shout.user) %>
			<%= highlight(auto_link(h(shout.body)), 'blogthings') %>
			<span class="time">
				<%= time_ago_in_words(shout.created_at, include_seconds = true) %> ago
			</span>
			<span class="user">
			by <%= shout.user.email %>
							<%= link_to "Delete", shout_path(shout.id), :method => "delete", :confirm => "Delete this shout?" %>
				</span>
		</li>
	<% end %>
</ul>